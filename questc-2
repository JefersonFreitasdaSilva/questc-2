#include <stdio.h>
 int main (void){
 int N;
 printf("Quantos pacientes? ");
 scanf("%d",&N);
 for(int i=0;i<N;i++){
 float P,A,M;
 printf("\n%dÂ° paciente:\nPeso? ",i+1);
 scanf("%f",&P);
 printf("Altura? ");
 scanf("%f",&A);
 M=P/(A*A);
 printf("IMC..: %.2f\n",M);
 if (M>=18.5 && M<25) printf("Risco: baixo\n");
 else printf("Risco: alto\n");
 }
 return 0;
}
